{
  "name": "@theme-browser/monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for theme-browser.nvim and registry",
  "workspaces": [
    "packages/registry"
  ],
  "scripts": {
    "sync": "npx tsx scripts/01-sync.ts",
    "detect": "npx tsx scripts/02-detect.ts --apply",
    "detect:dryrun": "npx tsx scripts/02-detect.ts",
    "merge": "npx tsx scripts/03-merge.ts",
    "build": "node scripts/04-build.mjs",
    "pipeline": "npm run sync && npm run detect && npm run merge && npm run build",
    "install:plugin": "node scripts/05-bundle.mjs",
    "validate": "node scripts/validate/registry.mjs",
    "validate:lua": "zx scripts/validate/lua-loaders.mjs",
    "verify": "npm run build && npm run validate",
    "test": "npm run test -w packages/registry",
    "test:plugin": "make -C packages/plugin test",
    "clean": "npm run clean -w packages/registry && rm -rf packages/registry/artifacts reports .cache"
  },
  "devDependencies": {
    "zx": "^8.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
