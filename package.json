{
  "name": "@theme-browser/monorepo",
  "version": "0.3.3",
  "private": true,
  "type": "module",
  "description": "Monorepo for theme-browser.nvim and registry",
  "scripts": {
    "sync": "pnpm --filter @theme-browser/registry task:sync",
    "detect": "pnpm --filter @theme-browser/registry task:detect",
    "detect:dryrun": "pnpm --filter @theme-browser/registry task:detect:dryrun",
    "merge": "pnpm --filter @theme-browser/registry task:merge",
    "build": "pnpm --filter @theme-browser/registry task:build",
    "bundle": "pnpm --filter @theme-browser/registry task:bundle",
    "pipeline": "pnpm sync && pnpm detect && pnpm merge && pnpm build",
    "validate": "pnpm --filter @theme-browser/registry task:validate",
    "verify": "pnpm build && pnpm validate",
    "lint": "pnpm --filter @theme-browser/registry lint",
    "typecheck": "pnpm --filter @theme-browser/registry typecheck",
    "format": "pnpm --filter @theme-browser/registry format",
    "format:check": "pnpm --filter @theme-browser/registry format:check",
    "test": "pnpm --filter @theme-browser/registry test",
    "test:plugin": "make -C packages/plugin test",
    "clean": "pnpm --filter @theme-browser/registry clean && rm -rf packages/registry/artifacts reports .cache"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3"]
  }
}
