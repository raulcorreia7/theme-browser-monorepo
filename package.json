{
  "name": "@theme-browser/monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for theme-browser.nvim and registry",
  "workspaces": [
    "theme-browser-registry-ts"
  ],
  "scripts": {
    "sync": "npx tsx scripts/01-sync-index.ts",
    "detect": "npx tsx scripts/02-detect-strategies.ts --apply",
    "detect:dryrun": "npx tsx scripts/02-detect-strategies.ts",
    "merge": "npx tsx scripts/03-merge-sources.ts",
    "build": "node scripts/04-generate-themes.mjs",
    "pipeline": "npm run sync && npm run detect && npm run merge && npm run build",
    "install:plugin": "node scripts/05-install-themes.mjs",
    "validate": "node scripts/validate/registry.mjs",
    "validate:lua": "zx scripts/validate/lua-loaders.mjs",
    "verify": "npm run build && npm run validate",
    "test": "npm run test -w theme-browser-registry-ts",
    "test:plugin": "make -C theme-browser.nvim test",
    "clean": "npm run clean -w theme-browser-registry-ts && rm -rf theme-browser-registry-ts/artifacts reports .cache"
  },
  "devDependencies": {
    "zx": "^8.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
