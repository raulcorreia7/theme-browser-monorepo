{
  "name": "@theme-browser/monorepo",
  "version": "0.2.1",
  "private": true,
  "type": "module",
  "description": "Monorepo for theme-browser.nvim and registry",
  "workspaces": [
    "packages/registry"
  ],
  "scripts": {
    "sync": "npm run task:sync -w packages/registry",
    "detect": "npm run task:detect -w packages/registry",
    "detect:dryrun": "npm run task:detect:dryrun -w packages/registry",
    "merge": "npm run task:merge -w packages/registry",
    "build": "npm run task:build -w packages/registry",
    "bundle": "npm run task:bundle -w packages/registry",
    "pipeline": "npm run sync && npm run detect && npm run merge && npm run build",
    "validate": "npm run task:validate -w packages/registry",
    "verify": "npm run build && npm run validate",
    "lint": "npm run lint -w packages/registry",
    "typecheck": "npm run typecheck -w packages/registry",
    "format": "npm run format -w packages/registry",
    "format:check": "npm run format:check -w packages/registry",
    "test": "npm run test -w packages/registry",
    "test:plugin": "make -C packages/plugin test",
    "clean": "npm run clean -w packages/registry && rm -rf packages/registry/artifacts reports .cache"
  },
  "engines": {
    "node": ">=20"
  }
}
